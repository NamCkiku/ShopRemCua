
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var ListNewProduct = (IEnumerable<RemCua.Entities.Models.Product>)ViewBag.NewProduct;
    var ListFeatureProduct = (IEnumerable<RemCua.Entities.Models.Product>)ViewBag.Feature;
    var Category = (IEnumerable<RemCua.Entities.Models.ProductCategory>)ViewBag.Category;
    var ListNewPost = (IEnumerable<RemCua.Entities.Models.Post>)ViewBag.NewPost;
}
<div class="content-left">
    <div class="box-module">
        <div>
            <div class="title_module">
                <h3 class=""><span>Sản Phẩm Mới Nhất</span></h3>
            </div>
            <div class="box-content">
                <div class="row-product">
                    @foreach (var item in ListNewProduct)
                    {
                        var url = "/chi-tiet/" + item.Alias + "-" + item.ID;
                        <div class="box-product">
                            <a class="image" href="@url" title="View more">
                                <img src="@item.Image" />
                            </a>
                            <h3 class="name"><a href="@url" title="">@item.Name</a></h3>
                            <p class="wrap_price"> <span class="price">@(item.Price == 0 ? "Liên hệ" : item.Price.ToString("N0")) VNĐ</span> </p>
                            <a href="javascript:;" class="btn-class btn-cart"><span><i class="fa fa-shopping-cart"></i>Đặt hàng</span> </a>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    @foreach (var category in Category)
    {
        <div class="box-module">
            <div>
                <div class="title_module">
                    <h3 class=""><span>@category.Name</span></h3>
                </div>
                <div class="box-content">
                    <div class="row-product">
                        @foreach (var item in category.Products.OrderByDescending(x => x.CreatedDate).Take(4))
                        {
                            var url = "/chi-tiet/" + item.Alias + "-" + item.ID;
                            <div class="box-product">
                                <a class="image" href="@url" title="View more">
                                    <img src="@item.Image" />
                                </a>
                                <h3 class="name"><a href="@url" title="">@item.Name</a></h3>
                                <p class="wrap_price"> <span class="price">@(item.Price == 0 ? "Liên hệ" : item.Price.ToString("N0")) VNĐ</span> </p>
                                <a href="javascript:;" class="btn-class btn-cart"><span><i class="fa fa-shopping-cart"></i>Đặt hàng</span> </a>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    }
</div>
<div class="content-right">
    <div class="box-module">
        <div>
            <div class="title_module">
                <h3 class=""><span>Hỗ Trợ Trực Tuyến</span></h3>
            </div>
            <div class="box-content">
                <div class="row-module_support">
                    <div class="module_support">
                        <div class="policy_sendo">
                            <div class="policy_sendo_box ">
                                <a class="buystep" href="#" title="Các bước mua hàng">Các bước mua hàng</a>
                            </div>
                            <div class="policy_sendo_box">
                                <a class="shippingstep" href="#" title="Phương thức vận chuyển">Phương thức vận chuyển</a>
                            </div>
                            <div class="policy_sendo_box">
                                <a class="paymentstep" href="#" title="Cách thức thanh toán">Cách thức thanh toán</a>
                            </div>
                        </div>
                        <div class="help_all nologin">
                            <div class="cs">
                                <div class="title">hỗ trợ khách hàng</div>
                                <div class="phoneno clearfix">
                                    <div class="pnleft">
                                        <div class="hnphone">MR:NAM : <font color="red">0965207749</font></div>
                                        <div class="hcmphone">MR-THÀNH : <font color="red">0965207749</font></div>
                                    </div>
                                </div><div class="email">
                                    Email: <a href="#" title="Email hỗ trợ của sendo.vn">remcuatot@gmail.com</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="box-module">
        <div>
            <div class="box-ads">
                <div class="row-module_ads">
                    <div class="module_ads">
                        <img src="~/Content/Client/img/VIDEOREMCUA.jpg" />
                        <img src="~/Content/Client/img/Capture.PNG" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="box-module">
        <div>
            <div class="title_module">
                <h3 class=""><span>Sản Phẩm Bán Chạy</span></h3>
            </div>
            <div class="box-content">
                <div class="row-product-widget">
                    <ul class="product_list_widget">
                        @foreach (var item in ListFeatureProduct)
                        {
                            var url = "/chi-tiet/" + item.Alias + "-" + item.ID;
                            <li>
                                <a href="@url">
                                    <img src="@item.Image" />
                                    <span>@item.Name</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="box-module">
        <div>
            <div class="title_module">
                <h3 class=""><span>Tin Tức Mới Nhất</span></h3>
            </div>
            <div class="box-content">
                <div class="row-news-widget">
                    <ul class="news_list_widget">
                        @foreach (var item in ListNewPost)
                        {
                            var url = "/tin-tuc/" + item.Alias + "-" + item.ID;
                            <li>
                                <a href="@url">
                                    <img src="@item.Image" />
                                </a>
                                <div class="new_info">
                                    <h3>
                                        <a href="@url">@item.Name</a>
                                        <span class="new-info-update">
                                            @item.CreatedDate.Value.ToString("dd/MM/yyyy")
                                            <i class="fa fa-eye"></i>
                                            @item.ViewCount
                                        </span>
                                    </h3>

                                </div>

                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="box-module">
        <div>
            <div class="title_module">
                <h3 class=""><span>Ý Kiến Khách Hàng</span></h3>
            </div>
            <div class="box-content">
                <div class="row-module_opinion">
                    <p>Bạn đánh giá thế nào về chất lượng phục vụ của chúng tôi</p>
                    <div class="radio">
                        <label>
                            <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
                            Rất hài lòng
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
                            Hài lòng
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
                            Không hài lòng
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
                            Yếu Kém
                        </label>
                    </div>
                    <div class="form-group">
                        <div class="text-center box-margion-top">
                            <input type="button" class="btn-opinion" value="Bình chọn">
                            <input type="button" class="btn-result" value="Kết quả">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="box-module">
        <div>
            <div class="title_module">
                <h3 class=""><span>Thống Kê Truy Cập</span></h3>
            </div>
            <div class="box-content">
                <div class="row-module_opinion">
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
