@model RemCua.Entities.Models.Product
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Thêm Sản Phẩm
                </header>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Tên Sản Phẩm</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Tiêu Đề Seo</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.Alias, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Alias)
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Loại Sản Phẩm</label>(<span style="color:#FF0000">*</span>)
                                    @Html.DropDownListFor(model => model.CategoryID, (SelectList)ViewBag.CategoryID, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Bảo Hành</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.Warranty, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Warranty)
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @*<input type="text" name="Picture" id="txthinhanh2" class="form-control" placeholder="Hình Ảnh">*@
                                @Html.TextBoxFor(model => model.Image, new { @class = "form-control", placeholder = "Hình Ảnh..." })
                            </div>
                            <div class="col-lg-2">
                                <button type="button" class="btn btn-primary" id="btnSelectImage">
                                    <i class="fa fa-arrow-circle-o-down"></i>
                                    <span>Chọn Ảnh</span>
                                </button>
                            </div>
                            @*<div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Warranty, new { @class = "form-control", placeholder = "Bảo Hành" })
                                        @Html.ValidationMessageFor(model => model.Warranty)
                                    </div>
                                </div>*@
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Thẻ Seo</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.Tags, new { @class = "form-control", id = "tagsinput" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Mô Tả Ngắn</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextAreaFor(model => model.Description, 7, 10, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mô Tả Sản Phẩm</label>
                                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", id = "txtContent" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Gía Sản Phẩm</label>(<span style="color:#FF0000">*</span>)
                                    <div class="input-group m-bot15">
                                        <span class="input-group-addon">$</span>
                                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                                        <span class="input-group-addon">.000</span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Price)
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Gía Khuyễn Mãi</label>(<span style="color:#FF0000">*</span>)
                                    <div class="input-group m-bot15">
                                        <span class="input-group-addon">$</span>
                                        @Html.TextBoxFor(model => model.PromotionPrice, new { @class = "form-control" })
                                        <span class="input-group-addon">.000</span>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.PromotionPrice)
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Số Lượng</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", placeholder = "Số Lượng..." })
                                    @Html.ValidationMessageFor(model => model.Quantity)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Ngày Nhập</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control form_datetime datepicker", placeholder = "Ngày Nhập..." })
                                    @Html.ValidationMessageFor(model => model.CreatedDate)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Ngày Hết Hạn</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.UpdatedDate, new { @class = "form-control form_datetime datepicker", placeholder = "Ngày Hết Hạn..." })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Meta Keyword</label>(<span style="color:#FF0000">*</span>)
                                    @Html.TextBoxFor(model => model.MetaKeyword, new { @class = "form-control", placeholder = "Số Lượng..." })
                                    @Html.ValidationMessageFor(model => model.MetaKeyword)
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-round btn-primary btn-md">
                            <i class="fa fa-plus"></i>Sửa Sản Phẩm
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </div>
}

@section scripts
{
    <link href="~/Content/Admin/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <script src="~/Content/Admin/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/Admin/assets/ckfinder/ckfinder.js"></script>
    <script src="~/Content/Admin/assets/ckeditor/ckeditor.js"></script>
    <script src="~/Content/Admin/js/jquery.tagsinput.js"></script>
    <script>

        $('.datepicker').datepicker({
        });

        $('#tagsinput').tagsInput();

        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Content/Admin/assets/ckeditor/config.js',
        });

        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#Image').val(url);
            };
            finder.popup();
        })
    </script>
    @if (ViewBag.message != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('@ViewBag.message')
            });
        </script>
    }
}
